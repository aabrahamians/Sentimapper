<script type="text/javascript">
var DateFormatting = {
 
    init: function()
    {
        var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
         
        // Loop over and write in the date formatted using the local 
        $('span.convertTimestamp').each(function()
        {           
            var utcDate = new Date($(this).html());
             
            // Add leading zeros
            // Hours
            var hours = new String(utcDate.getHours());
 
            if (hours.length == 1)
            {
                hours = '0' + utcDate.getHours();
            }
             
            // Minutes
            var minutes = new String(utcDate.getMinutes());
             
            if (minutes.length == 1)
            {
                minutes = '0' + utcDate.getMinutes();
            }
             
            // Seconds
            var seconds = new String(utcDate.getSeconds());
             
            if (seconds.length == 1)
            {
                seconds = '0' + utcDate.getSeconds();
            }
             
            $(this).html(utcDate.getDate() + ' ' + months[utcDate.getMonth()] + ' ' + utcDate.getFullYear() + ' ' + hours + ':' + minutes + ':' + seconds);
        });
    },
}
 
$(document).ready(DateFormatting.init);
</script>


<div>
  <div id="map" style='width: 100%; height:800px;'></div>
</div>

<script type="text/javascript">

  
buildMap([
        <% @tweets.each do |spot| %>
        {
          <% if (spot["sentiment"].to_f > 0.05) %>
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/green-dot.png",
          width: 32,
          height: 32
          },
          <% elsif   (spot["sentiment"].to_f < -0.05) %>  
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png",
          width: 32,
          height: 32
          },
          <% else %> //the query currently exlcudes 0.0
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/yellow-dot.png",
          // url: "http://upload.wikimedia.org/wikipedia/commons/8/8c/Transparent.png",
          width: 32,
          height: 32
          },
          <% end %>
          lat: <%=spot["latitude"]%>, // pulls in the latitude for the marker via ERB
          lng: <%=spot["longitude"]%>, // pulls in the longitude for the marker via ERB
          title: "tweet",
          infowindow: '<h3><a href="http://www.twitter.com/<%=spot["user_name"]%>/status/<%=spot["tweet_id"]%>">@<%=spot["user_name"]%></a></h3><p><%=spot["text"]%></p><p id="score">Sentiment: <%=spot["sentiment"].to_f.round(2)%></p><p id="time">Posted: <span class="convertTimestamp"><%=spot["created_at"].localtime%></span></p>'
        },
        <% end %>
      ])

</script>
