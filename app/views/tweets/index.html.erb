  </div>

<script type="text/javascript">

  
buildMap([
        <% @tweets.each do |spot| %>
        {
          <% if (spot["sentiment"].to_f > 3.0) %>
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/green-dot.png",
          width: 32,
          height: 32
          },
          <% elsif   (spot["sentiment"].to_f < -3.0) %>  
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png",
          width: 32,
          height: 32
          },
          <% else %>  
          picture: {
          // url: "http://maps.google.com/mapfiles/ms/icons/yellow-dot.png",
          url: "http://upload.wikimedia.org/wikipedia/commons/8/8c/Transparent.png",
          width: 32,
          height: 32
          },
          <% end %>
          lat: <%=spot["latitude"]%>, // pulls in the latitude for the marker via ERB
          lng: <%=spot["longitude"]%>, // pulls in the longitude for the marker via ERB
          title: "tweet",
          infowindow: '<h1><a href="http://www.twitter.com/<%=spot["user_name"]%>/status/<%=spot["tweet_id"]%>">@<%=spot["user_name"]%></a></h1> <p><%=spot["text"]%></p>'
        },
        <% end %>
      ])

</script>
