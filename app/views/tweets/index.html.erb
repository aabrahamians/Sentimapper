
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<div>
  <div id="map" style='width: 100%; height:800px;'></div>
</div>

<script type="text/javascript">
var mapStyle = [
    {
        "featureType": "water",
        "stylers": [
            {
                "color": "#46bcec"
            },
            {
                "visibility": "on"
            }
        ]
    },
    {
        "featureType": "landscape",
        "stylers": [
            {
                "color": "#f2f2f2"
            }
        ]
    },
    {
        "featureType": "road",
        "stylers": [
            {
                "saturation": -100
            },
            {
                "lightness": 45
            }
        ]
    },
    {
        "featureType": "road.highway",
        "stylers": [
            {
                "visibility": "simplified"
            }
        ]
    },
    {
        "featureType": "road.arterial",
        "elementType": "labels.icon",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "administrative",
        "elementType": "labels.text.fill",
        "stylers": [
            {
                "color": "#444444"
            }
        ]
    },
    {
        "featureType": "transit",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "poi",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    }
  ];
  

handler = Gmaps.build('Google');
handler.buildMap(
  { 
    provider: {
      zoom: 5,
      provider_key: "AIzaSyDJJPOQH24cT6ETa9IZacS7NENpUt2MKzA",
      styles: mapStyle,
      mapTypeControl: false,
      panControl: false,
      streetViewControl: false,
      zoomControlOptions: {
              style: google.maps.MapTypeControlStyle.HORIZONTAL_BAR,
              position: google.maps.ControlPosition.TOP_LEFT
            }
    },
      internal: {id: 'map'}
  },
    function(){
   markers = handler.addMarkers([
        <% @tweets.each do |spot| %>
        {
          <% if (spot["sentiment"].to_f > 0.25) %>
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/green-dot.png",
          width: 32,
          height: 32
          },
          <% elsif   (spot["sentiment"].to_f < -0.25) %>  
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png",
          width: 32,
          height: 32
          },
          <% else %>  
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/yellow-dot.png",
          width: 32,
          height: 32
          },
          <% end %>
          lat: <%=spot["latitude"]%>, // pulls in the latitude for the marker via ERB
          lng: <%=spot["longitude"]%>, // pulls in the longitude for the marker via ERB
          title: "tweet",
          infowindow: '<h1><a href="http://www.twitter.com/<%=spot["user_name"]%>/status/<%=spot["id"]%>">@<%=spot["user_name"]%></a></h1> <p><%=spot["text"]%></p>'
        },
        <% end %>
      ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
