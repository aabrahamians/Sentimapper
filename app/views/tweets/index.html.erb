
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>



<div>
  <div id="map" style='width: 100%; height:800px;'></div>
</div>

<script type="text/javascript">

  
buildMap([
        <% @tweets.each do |spot| %>
        {
          <% if (spot["sentiment"].to_f > 1.5) %>
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/green-dot.png",
          width: 32,
          height: 32
          },
          <% elsif   (spot["sentiment"].to_f < -1.5) %>  
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png",
          width: 32,
          height: 32
          },
          <% else %>  
          picture: {
          url: "http://maps.google.com/mapfiles/ms/icons/yellow-dot.png",
          // url: "http://upload.wikimedia.org/wikipedia/commons/8/8c/Transparent.png",
          width: 32,
          height: 32
          },
          <% end %>
          lat: <%=spot["latitude"]%>, // pulls in the latitude for the marker via ERB
          lng: <%=spot["longitude"]%>, // pulls in the longitude for the marker via ERB
          title: "tweet",
          infowindow: '<h1><a href="http://www.twitter.com/<%=spot["user_name"]%>/status/<%=spot["tweet_id"]%>">@<%=spot["user_name"]%></a></h1> <p><%=spot["text"]%></p>'
        },
        <% end %>
      ])

</script>
